<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/player12">


    <TextView
        android:id="@+id/tv_rounds"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Number of\nRounds"
        android:textColor="#0A1A71"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/et_rounds"
        android:layout_below="@id/tv_rounds"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter number here"
        android:textAlignment="center"
        android:inputType="number"
        android:visibility="invisible"/>



    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="330dp"
        android:text="                                                           "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#0000FF"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_playerPick"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="290dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textAlignment="center"
        android:text=" "
        android:gravity="center"
        android:textColor="#0000FF"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/b_rock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginBottom="220dp"
        android:background="#9F3FB5"
        android:text="Rock"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/b_paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginBottom="140dp"
        android:background="#9F3FB5"
        android:text="Paper"
        android:textColor="#FFFFFF"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/b_scissors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginBottom="60dp"
        android:background="#9F3FB5"
        android:text="Scissors"
        android:textColor="#FFFFFF"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/b_rock2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginBottom="220dp"
        android:background="#9F3FB5"
        android:text="Rock"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/b_paper2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginBottom="140dp"
        android:background="#9F3FB5"
        android:text="Paper"
        android:textColor="#FFFFFF"
        android:visibility="invisible"/>


    <Button
        android:id="@+id/b_scissors2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginBottom="60dp"
        android:background="#9F3FB5"
        android:text="Scissors"
        android:textColor="#FFFFFF"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/iv_rock"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="382dp"
        android:layout_marginLeft="382dp"
        android:layout_marginBottom="200dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/rock" />

    <ImageView
        android:id="@+id/iv_paper"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="382dp"
        android:layout_marginLeft="382dp"
        android:layout_marginBottom="120dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/paper" />

    <ImageView
        android:id="@+id/iv_scissors"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="382dp"
        android:layout_marginLeft="382dp"
        android:layout_marginBottom="40dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/scissors" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_centerInParent="true"
        android:text="TextView"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#0000FF"
        android:textSize="75dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_newgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="123dp"
        android:layout_marginBottom="56dp"
        android:background="#9F3FB5"
        android:text="Restart game"
        android:textColor="#FFFFFF"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_start1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        android:background="#9F3FB5"
        android:textColor="#FFFFFF"
        android:text="Start"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        android:background="#9F3FB5"
        android:textColor="#FFFFFF"
        android:text="Next"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/et_player1"
        android:layout_centerHorizontal="true"
        android:text="Name of player 1"
        android:textColor="#1D95A5"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="103dp"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/tv_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Name of player 2"
        android:textColor="#1D95A5"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="232dp"
        android:visibility="visible"/>


    <EditText
        android:id="@+id/et_player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name2"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter Name here"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="138dp"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/et_player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_name2"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter Name here"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="278dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_roundResult"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:text="TextView"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#0000FF"
        android:textSize="30dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_nextRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#9F3FB5"
        android:text="NEXT"
        android:textColor="#FFFFFF"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btn_mainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="143dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="56dp"
        android:background="#9F3FB5"
        android:text="Main Menu"
        android:textColor="#FFFFFF"
        android:visibility="invisible"/>




</RelativeLayout>